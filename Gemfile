  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'rspec-rails', '~> 2.6'
  gem 'sqlite3'
  gem 'therubyracer'
  gem 'execjs'
end
group :test do
  gem 'rspec', '~>2.6'
  gem 'webrat'
  gem 'factory_girl_rails'
end

group :production do
  gem 'pg'
  gem 'thin'
end

