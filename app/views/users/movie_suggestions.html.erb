<h1><%=@title%></h1>
<%if @first.nil?%>
<p>Start liking more movies to get better suggestions.</p>
<%elsif @first == @second%>
<p>Your top genre is <%=@first%>.</p>
<%= will_paginate @movies%>
<ol>
	<% @movies.each do |movie| %>
	<li>
		<a href="/movies/<%= movie.imdbid%>"><%= movie.title%></a>
	</li>
	<% end %>
</ol>
<%= will_paginate @movies%> 
<%else%>
<p>Your top genres are <%=@first%> and <%=@second%>.</p>
<%= will_paginate @movies%>
<ol>
	<% @movies.each do |movie| %>
	<li>
		<a href="/movies/<%= movie.imdbid%>"><%= movie.title%></a>
	</li>
	<% end %>
</ol>
<%= will_paginate @movies%> 
<%end%>
