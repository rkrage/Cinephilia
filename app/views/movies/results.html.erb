<h1>Results</h1>
<% if @query.empty? %>
<p>You did not enter any text. Try again.</p>
<% elsif @length < 0 %>
<p>Sorry, we could not find any results for, '<%= @query%>'.</p>
<% else %>
<p>Showing results for, '<%= @query%>'.</p>
<ul>
<% (0..@length).each do |i| %>
	<% @movie = @movies[i] %>
	<li>
		<%= link_to @movie.title, @movie.url, {:target => "_blank"} %>
		<div class="toggle">
			<p><%= @movie.plot %></p>
		</div>
	</li>
	<% end %>
</ul>
<% end%>
